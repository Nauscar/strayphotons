<%
typeColors = {
	light: [0, 1, 0],
	dark: [1, 0, 0]
};
%>

{
	"_name": <%= name + "_plate" %>,
	"renderable": <%= 'sensor-plate-' + type %>,
	"transform": {
		<% if (locals.rotate) { %>"rotate": <%= rotate %>,<% } %>
		"translate": <%= translate %>
	},
	"physics": {
		"model": <%= 'sensor-plate-' + type %>,
		"dynamic": false
	}
},
{
	"_name": <%= name %>,
	"renderable": "sensor",
	"transform": {
		"parent": <%= name + "_plate" %>,
		"translate": [0, 0, 0.015]
	},
	"lightsensor": {
		<% if (locals.outputTo) { %>"outputTo": <%= outputTo %>,<% } %>
		"translate": [0, 0, 0.1],
		"direction": [0, 0, 1],
		"onColor": <%= typeColors[type] %>,
		"triggers": <%= triggers %>
	}
}