{
	"name": <%= name + "_root" %>,
	"transform": <%= transform %>
},
{
	"name": <%= name %>,
	"renderable": "box",
	"transform": {
		"parent": <%= name + "_root" %>,
		"translate": [-0.05, 0, 0],
        "scale": [0.1, 0.1, 0.1]
	},
    "physics": {
        "model": "box",
        "dynamic": false
    },
    "trigger_area": {},
    "sound": [{
        "file": "click1.ogg",
        "volume": 0.3
    }, {
        "file": "click2.ogg",
        "volume": 0.4
    }],
    "signal_output": {},
    "event_input": [
        "/button/press",
        "/sound/play"
    ],
    "event_bindings": {
        "/trigger/object/enter": [
            <% if (locals.command) { %>{
                "target": "console:input/action/run_command",
                "set_value": <%= command %>
            }<% } %>,
            <%= name + "/button/press" %>,
            <%= name + "/sound/play" %>
        ],
        "/trigger/object/leave": [
            {
                "target": <%= name + "/sound/play" %>,
                "set_value": 1
            }
        ]
    },
    "signal_bindings": {
        "button_pressed": <%= name + "/trigger_object_enter" %>
    }
},
{
	"name": <%= name + "_actuator" %>,
	"renderable": "box",
	"transform": {
		"parent": <%= name + "_root" %>,
		"translate": [-0.125, 0, 0],
        "scale": [0.05, 0.05, 0.05]
	},
    "physics": {
        "model": "box",
        "group": "interactive",
        "force": [-0.05, 0, 0]
    },
    "physics_joints": [{
        "target": <%= name + "_root" %>,
        "type": "Slider",
        "remote_offset": {
            "translate": [-0.125, 0, 0]
        },
        "range": [-0.04, 0]
    }],
	"signal_output": {},
    "trigger_group": "object"
}
