{
	"components": {
		"transform": {},
		"signal_output": {
			"alive": 0
		},
		"signal_bindings": {
			"neighbor_count": "scoperoot/neighbor[-1][-1] + scoperoot/neighbor[-1][0] + scoperoot/neighbor[-1][1] + scoperoot/neighbor[0][-1] + scoperoot/neighbor[0][1] + scoperoot/neighbor[1][-1] + scoperoot/neighbor[1][0] + scoperoot/neighbor[1][1]",
			"should_toggle": "scoperoot/neighbor_count == 3 ? !scoperoot/alive : (scoperoot/neighbor_count == 2 ? 0 : scoperoot/alive)"
		},
		"event_input": {},
		"event_bindings": {
			"/physics/collision/force_found": {
				"outputs": "scoperoot/life/toggle_alive",
				"set_value": true
			},
			"/life/update_alive": {
				"outputs": "scoperoot/life/toggle_alive",
				"filter": "scoperoot/should_toggle",
				"set_value": true
			},
			"/life/toggle_alive": {
				"outputs": ["scoperoot/set_signal/alive", "light/set/renderable.emissive"],
				"modify": "!scoperoot/alive"
			}
		},
		"physics": {
			"shapes": {
				"box": [0.03, 0.03, 0.03],
				"transform": {
					"translate": [0, 0.015, 0]
				}
			},
			"type": "Static",
			"contact_report_force": 1
		},
		"script": [
			{
				"prefab": "life_cell",
				"parameters": {
					"board_size": [32, 32]
				}
			},
			{
				"onTick": "collapse_events",
				"parameters": {
					"/life/neighbor_updated": "/life/update_alive"
				}
			},
			{
				"onTick": "signal_from_event",
				"parameters": {
					"outputs": ["alive"]
				}
			}
		]
	},
	"entities": [
		{
			"name": "light",
			"transform": {
				"parent": "scoperoot",
				"translate": [0, 0.015, 0],
				"scale": 0.03
			},
			"renderable": {
				"model": "box"
			},
			"event_input": {},
			"script": [
				{
					"onTick": "component_from_event",
					"parameters": {
						"outputs": "renderable.emissive"
					}
				}
			]
		}
	]
}
